<%- include('../views/partials/_head.ejs') %> 
<body>
        <%- include('../views/partials/navbar.ejs') %> 
      <div class="col-sm-10">
        <h1> <%= title%> </h1>
        <form action="" method="POST">
            <div class="form-group">
                <label for="name"> Genre: </label>
                <input class="form-control" type="text" placeholder="Fantasy, Poetry etc" name="name" value="<%= locals.genre ? locals.genre.name : '' %>">
                <button class="btn btn-primary mt-3"> Submit </button>

            </div>
        </form>
        <% if (locals.errors) { %>
            <ul>
               <% for (let i in errors ) { %>
                <li> <%= errors[i].msg %> </li>
               <% } %> 
            </ul>
        <% } %> 
        
      </div>
    </div>
  </div>
</body>
</html>