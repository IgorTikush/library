<%- include('../views/partials/_head.ejs') %> 
<body>
        <%- include('../views/partials/navbar.ejs') %> 
      <div class="col-sm-10">
        <h1><%= title %> </h1>
        <form action="" method="POST">
            <div class="form-group">
                <label for="book">Book:</label>
                <select name="book" required='true' class="form-control">
                    <% for ( let val in book_list) { %>
                        <option value="<%= book_list[val]._id %>" <%=locals.bookinstance? locals.bookinstance.book._id.toString() === book_list[val]._id.toString() ? 'selected' : 'false' : '' %>><%= book_list[val].title %> </option>
                    <% }%> 
                </select>

            </div>
            <div class="form-group">
                <label for="imprint">Imprint: </label>
                <input class="form-control" type="text" placeholder="Publisher and date information" name='imprint' required='true' value='<%= locals.bookinstance ? bookinstance.imprint : '' %> '>
            </div>
            <div class="form-group">
                <label for="due_back">Date when book available: </label>
                <input class="form-control" type="date" name="due_back" id="" value='<%= locals.bookinstance ? bookinstance.due_back.toISOString().slice(0,10) : '' %>'>
            </div>
            <div class="form-group">
                <label for="status">Status:</label>
                <select name="status" class="form-control" required='true'>
                    <option value="Maintenance">Maintenance</option>
                    <option value="Available">Available</option>
                    <option value="Loaned">Loaned</option>
                    <option value="Reserved">Reserved</option>
                </select>
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
        <% if (locals.errors) { %>
            <ul>
                <% for (let i in errors) { %>
                    <li><%= errors[i].msg %> </li>
                <% } %> 
            </ul>
        <% }  %> 
      </div>
    </div>
  </div>
</body>
</html>
