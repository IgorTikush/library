<%- include('../views/partials/_head.ejs') %> 
<body>
        <%- include('../views/partials/navbar.ejs') %> 
      <div class="col-sm-10">
        <h1><%= title %>: <%= book.name %>  </h1>
        <% console.log(book._id) %>
        <% if (book_instances.length >= 1) { %>
            <p>Delete the following books before attempting to delete this book.</p>
            <div class="margin">
                <h4>Books</h4>
                <dl>
                    <% book_instances.forEach((book) => { %>
                        <dt>
                            <a href="<%= book.url %> "><%= book.imprint %> </a>
                        </dt>
                        
                    <% }) %>
                </dl>
            </div>
        <%} else { %>
            <p>Do you really want to delete this Book?</p>
            <form action="" method="POST">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="bookid" required='true' value="<%= book._id%>" >
                </div>
                <button  class="btn btn-primary">Delete</button>
            </form>
        <% } %> 
      </div>
    </div>
  </div>
</body>
</html>
