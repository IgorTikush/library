<%- include('../views/partials/_head.ejs') %> 
<body>
        <%- include('../views/partials/navbar.ejs') %> 
      <div class="col-sm-10">
        <h1><%= title %>: <%= genre.name %>  </h1>
        <% console.log(genre._id) %>
        <% if (books.length >= 1) { %>
            <p>Delete the following books before attempting to delete this genre.</p>
            <div class="margin">
                <h4>genres</h4>
                <dl>
                    <% books.forEach((book) => { %>
                        <dt>
                            <a href="<%= book.url %> "><%= book.title %> </a>
                        </dt>
                        
                    <% }) %>
                </dl>
            </div>
        <%} else { %>
            <p>Do you really want to delete this genre?</p>
            <form action="" method="POST">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="genreid" required='true' value="<%= genre._id%>">
                </div>
                <button class="btn btn-primary">Delete</button>
            </form>
        <% } %> 
      </div>
    </div>
  </div>
</body>
</html>
