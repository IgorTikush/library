<%- include('../views/partials/_head.ejs') %> 
<body>
        <%- include('../views/partials/navbar.ejs') %> 
      <div class="col-sm-10">
        <h1><%= title %> </h1>
        <form action="" method="POST">
            <div class="form-group">
                <label for="first_name">First Name:</label>
                <input class="form-control" type="text" placeholder="First name (Christina)" name="first_name" required='true' value="<%= locals.author === undefined ? '' : author.first_name %> ">
                <label for="first_name">Family Name:</label>
                <input class="form-control" type="text" placeholder="Family name (Christina)" name="family_name" required='true' value="<%= locals.author === undefined ? '' : author.family_name %> ">
            </div>
            <div class="form-group">
                <label for="date_of_birth">Date of birth: </label>
                <input class="form-control" type="date" name="date_of_birth" value="<%= locals.author === undefined ? '' : author.date_of_birth.toISOString().slice(0,10)%>">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
        <% if (locals.errors) { %>
            <ul>
                <% for (let i in errors) { %>
                    <li><%= errors[i].msg %> </li>
                <% } %> 
            </ul>
        <% }  %>  
      </div>
    </div>
  </div>
</body>
</html>
